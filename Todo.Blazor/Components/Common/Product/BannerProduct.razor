@if (Product != null)
{
    <div class="@StyleClasse" style="background-image: url('@Product.ImageUrl')">
        <div class="bg-gray-900 bg-opacity-50 flex items-center h-full">
            <div class="px-10 max-w-xl">
                <h2 class="text-2xl text-white font-semibold">@Product.Name</h2>
                <p class="mt-2 text-gray-400">@Product.Description</p>
                <button class="flex items-center mt-4 px-3 py-2 bg-blue-600 text-white text-sm uppercase font-medium rounded hover:bg-blue-500 focus:outline-none focus:bg-blue-500">
                    <span>Shop Now</span>
                    <svg class="h-5 w-5 mx-2" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor"><path d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public ProductDto Product { get; set; }
    [Parameter]
    public string StyleClasse { get; set; }
    protected override async Task OnInitializedAsync()
    {
        if (Product != null)
        {
            Product.ImageUrl = "https://images.unsplash.com/photo-1577655197620-704858b270ac?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1280&q=144";
        }
    }
}